{
  "name": "@storm-software/video-assets",
  "version": "0.0.1",
  "type": "module",
  "description": "Storm Software branded video assets to be used in other projects.",
  "repository": {
    "type": "github",
    "url": "https://github.com/storm-software/media-kit.git",
    "directory": "packages/video-assets"
  },
  "homepage": "https://stormsoftware.com",
  "bugs": {
    "url": "https://stormsoftware.com/support",
    "email": "support@stormsoftware.com"
  },
  "author": {
    "name": "Storm Software",
    "email": "contact@stormsoftware.com",
