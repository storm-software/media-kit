{
  "name": "video-assets",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/video-assets/src",
  "targets": {
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "remotion preview src/index.tsx",
        "cwd": "{projectRoot}"
      }
    },
    "build-gifs": {
      "cache": true,
      "inputs": ["{projectRoot}/src", "{projectRoot}/scripts"],
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "executor": "nx:run-commands",
      "dependsOn": ["clean", "^build"],
      "options": {
        "command": "tsx scripts/build-gifs.ts",
        "cwd": "{projectRoot}"
      }
    },
    "build": {
      "cache": true,
      "inputs": ["{projectRoot}/dist"],
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "dependsOn": ["typecheck", "build-gifs"],
      "command": "pnpm copyfiles --up=3 \"./packages/video-assets/dist/**/*\" ./dist/packages/video-assets"
    },
    "nx-release-publish": {
      "executor": "@storm-software/cloudflare-tools:r2-upload-publish",
      "options": {
        "bucketId": "storm-file-store",
        "tag": "media-kit",
        "path": "dist/packages/video-assets"
      }
    }
  },
  "tags": ["platform:node"]
}
