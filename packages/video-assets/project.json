{
  "name": "video-assets",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/video-assets/src",
  "targets": {
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "pnpm exec rimraf dist/packages/video-assets",
          "pnpm exec rimraf packages/video-assets/dist"
        ]
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "remotion preview src/index.tsx",
        "cwd": "{projectRoot}"
      }
    },
    "build-storm-software": {
      "cache": true,
      "inputs": [
        "{projectRoot}/src/storm-software",
        "{projectRoot}/src/components",
        "{projectRoot}/src/types",
        "{projectRoot}/src/utilities",
        "{projectRoot}/src/style.css",
        "{projectRoot}/scripts"
      ],
      "outputs": [
        "{workspaceRoot}/dist/{projectRoot}/storm-software/optimized"
      ],
      "executor": "nx:run-commands",
      "dependsOn": ["clean", "^build"],
      "options": {
        "command": "tsx scripts/build.ts storm-software",
        "cwd": "{projectRoot}"
      }
    },
    "build-powerlines": {
      "cache": true,
      "inputs": [
        "{projectRoot}/src/powerlines",
        "{projectRoot}/src/components",
        "{projectRoot}/src/types",
        "{projectRoot}/src/utilities",
        "{projectRoot}/src/style.css",
        "{projectRoot}/scripts"
      ],
      "outputs": ["{workspaceRoot}/dist/{projectRoot}/powerlines/optimized"],
      "executor": "nx:run-commands",
      "dependsOn": ["clean", "^build"],
      "options": {
        "command": "tsx scripts/build.ts powerlines",
        "cwd": "{projectRoot}"
      }
    },
    "build-acidic": {
      "cache": true,
      "inputs": [
        "{projectRoot}/src/acidic",
        "{projectRoot}/src/components",
        "{projectRoot}/src/types",
        "{projectRoot}/src/utilities",
        "{projectRoot}/src/style.css",
        "{projectRoot}/scripts"
      ],
      "outputs": ["{workspaceRoot}/dist/{projectRoot}/acidic/optimized"],
      "executor": "nx:run-commands",
      "dependsOn": ["clean", "^build"],
      "options": {
        "command": "tsx scripts/build.ts acidic",
        "cwd": "{projectRoot}"
      }
    },
    "build": {
      "cache": true,
      "inputs": ["{projectRoot}/dist"],
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "dependsOn": [
        "clean",
        "typecheck",
        "build-storm-software",
        "build-powerlines",
        "build-acidic"
      ],
      "command": "pnpm copyfiles --up=4 \"./packages/video-assets/dist/*/assets/**/*\" \"./packages/video-assets/dist/*/optimized/**/*\" ./dist/packages/video-assets"
    },
    "nx-release-publish": {
      "executor": "@storm-software/cloudflare-tools:r2-upload-publish",
      "options": {
        "bucketId": "storm-file-store",
        "tag": "media-kit",
        "path": "dist/packages/video-assets"
      }
    }
  },
  "tags": ["platform:node"]
}
