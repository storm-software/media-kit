{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@storm-software/tsconfig/core.json",
  "display": "Storm Software - TypeScript Monorepo",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@storm-software/tools-config/*": ["tools/config/*"],
      "@storm-software/tools-scripts": ["tools/scripts/src/index.ts"],
      "@storm-software/tools-scripts/*": ["tools/scripts/src/*"],
      "@storm-software/video-assets": ["packages/video-assets/src/index.ts"],
      "@storm-software/video-assets/*": ["packages/video-assets/src/*"]
    }
  }
}
